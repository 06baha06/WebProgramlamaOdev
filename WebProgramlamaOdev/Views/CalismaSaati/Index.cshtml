@model IEnumerable<WebProgramlamaOdev.Models.CalismaSaati>

@{
    ViewData["Title"] = "Index";
}

<h1>Çalışma Saatleri</h1>

<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Saatler)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doktor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Saatler)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Doktor.DoktorAdi)  @Html.DisplayFor(modelItem => item.Doktor.DoktorSoyadi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SaatID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SaatID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SaatID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
